helm install spark-operator spark-operator/spark-operator \
  -n spark-operator \
  --create-namespace \
  --version 2.1.1 \
  --set image.repository=dockerhub/kubeflow/spark-operator \
  --set image.tag=2.1.1 \
  --set "spark.jobNamespaces={test-ns}"
